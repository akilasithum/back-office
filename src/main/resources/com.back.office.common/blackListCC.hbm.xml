<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.back.office.entity.BlackListCC" table="black_list_credit_cards" catalog="">
        <id name="creditCardId" type="java.lang.Integer">
            <column name="creditCardId" />
            <generator class="identity" />
        </id>
        <property name="creditCardNumber" type="java.lang.String">
            <column name="creditCardNumber" length="30" />
        </property>
        <property name="status" type="java.lang.String">
            <column name="status" length="30" />
        </property>
        <property name="recordStatus" type="java.lang.Integer">
            <column name="recordStatus"  />
        </property>
    </class>
</hibernate-mapping>