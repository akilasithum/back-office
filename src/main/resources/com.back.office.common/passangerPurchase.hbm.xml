<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.back.office.entity.PassengerPurchase" table="pax_details_view" catalog="">
        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="pnr" type="java.lang.String">
            <column name="pnr" length="100"/>
        </property>
        <property name="paxName" type="java.lang.String">
            <column name="paxName" length="30" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="email"  />
        </property>
        <property name="seatNo" type="java.lang.String">
            <column name="seatNo" />
        </property>
        <property name="flightDate" type="java.util.Date">
            <column name="flightDate" />
        </property>

        <property name="flightId" type="java.lang.String">
            <column name="flightId" length="30" />
        </property>
        <property name="orderId" type="java.lang.String">
            <column name="orderId" length="30" />
        </property>



    </class>

</hibernate-mapping>